<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
    <ribbon>
        <tabs>
          <tab idMso="TabNewMailMessage">
            <group id="group1" insertAfterMso="GroupClipboard" label="Peppermint">
              <button id="btnRecordMessageNewMail" onAction="btnRecordMessageNewMail_Click" label="Add Audio Message" getImage="btnRecordMessage_getImage" size="large" 
                      screentip="Start an audio recording" 
                      supertip="Add an audio message when responding to e-mails or while composing a new e-mail."/>
            </group>
          </tab>
          <tab idMso="TabMail">
            <group id="group2" insertBeforeMso="GroupMailDelete" label="Peppermint">
              <button id="btnSendViaPeppermint" onAction="btnSendViaPeppermint_Click" label="Add Audio Message" getImage="btnRecordMessage_getImage" size="large" 
                      screentip="Start an audio recording" 
                      supertip="Add audio message(s) to your e-mail. Multiple messages can be recorded and attached."/>
            </group>
          </tab>
          <tab idMso="TabReadMessage">
            <group id="group3" insertAfterMso="GroupRespond">
                <button id="btnRecordMessage" onAction="btnRecordMessage_Click" label="Reply via Peppermint" getImage="btnRecordMessage_getImage" size="large" 
                        screentip="Start an audio recording" 
                        supertip="Respond to e-mail by recording your message and send the recorded file."/>
            </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>